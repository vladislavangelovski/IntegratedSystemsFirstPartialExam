@model IntegratedSystems.Domain.DTO.VaccinatePatientDTO

<h1>Vaccinate Patient</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="VaccinatePatient">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                @Html.DropDownListFor(x => Model.Manufacturer, new SelectList(Model.Manufacturers), new { @class = "form-control" })
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTaken" class="control-label"></label>
                <input asp-for="DateTaken" class="form-control" type="datetime-local"/>
                <span asp-validation-for="DateTaken" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                @Html.DropDownListFor(x => Model.PatientId, new SelectList(Model.Patients, "Id", "FirstName"), new { @class = "form-control" })
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="CenterId" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>