@model IntegratedSystems.Domain.DTO.VaccinesInCenterDTO

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>VaccinationCenter</h4>
    <a asp-action="VaccinatePatient" asp-route-id="@Model.VaccinationCenter.Id" class="btn btn-success">Vaccinate a Patient</a>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VaccinationCenter.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VaccinationCenter.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VaccinationCenter.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VaccinationCenter.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VaccinationCenter.MaxCapacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VaccinationCenter.MaxCapacity)
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Date Taken
                </th>
                <th>
                    Center
                </th>
                <th>
                    Certificate
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Vaccines)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PatientFor.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PatientFor.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateTaken)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Center.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Certificate)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.VaccinationCenter.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
